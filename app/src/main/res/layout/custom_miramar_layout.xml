<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5sp"
            app:cardElevation="5sp"
            android:layout_width="match_parent"
            android:layout_height="280sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/miramar_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/volkron"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/miramar_image"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_marginTop="10sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="5sp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/droidsans"
                android:id="@+id/miramar_item1"
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="40sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="5sp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/droidsans"
                android:id="@+id/miramar_item2"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="40sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="5sp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/droidsans"
                android:id="@+id/miramar_item3"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="40sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/droidsans"
                android:id="@+id/miramar_description"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>